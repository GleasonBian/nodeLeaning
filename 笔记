-- 删除
-- delete from users where username='lisi';
-- 增加列不能为空
alter table users add state int not null;
UPDATE `myblog`.`users`
SET
`state` = 1
WHERE `id` =1;

select * from users;

-- 列设置默认值
-- ALTER TABLE users ADD CONSTRAINT    DEFAULT   1   FOR   字段名